# Environment Variables for Walmart Sentiment Analyzer

# Secret key for JWT tokens (required for production)
SECRET_KEY=your-super-secret-jwt-key-here

# Database configuration (optional for Vercel - will use SQLite by default)
DATABASE_URL=sqlite:///sentiment_analyzer.db

# Email configuration for password reset (optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ScraperAPI key (required for web scraping)
SCRAPER_API_KEY=your-scraper-api-key-here

# Frontend URL for CORS (optional)
FRONTEND_URL=https://your-app.vercel.app
