{
  "version": 2,
  "name": "sentiment-analyzer",
  "builds": [
    {
      "src": "api/**/*.py", 
      "use": "@vercel/python",
      "config": {
        "maxDuration": 300
      }
    },
    {
      "src": "frontend/dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ]
}
